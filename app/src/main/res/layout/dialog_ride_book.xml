<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/backgrount_line_trans"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"><TextView
        android:layout_width="match_parent"
        android:id="@+id/txt_timer"
        android:textSize="22dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_alignBottom="@+id/vehicle_type_img"
            android:gravity="center"
            android:orientation="vertical"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="11dp"
        android:paddingLeft="22dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/vehicle_type_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/profile_pics" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/vehicle_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:civ_border_width="2dp"
            android:layout_marginLeft="66dp"
            app:civ_border_overlay="true"
            app:civ_border_color="@color/colorPrimaryDark"
            android:src="@drawable/profile_pics" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="16dp"
            android:gravity="center"
            android:text="@string/rupee_sign"
            android:textStyle="bold"
            android:layout_marginBottom="7dp"
            android:textColor="@color/colorPrimaryDark"
            />
        <TextView
            android:id="@+id/txt_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:gravity="center"
            android:textStyle="bold"
            android:singleLine="true"
            android:hint="0.0"
            android:textColor="@color/colorPrimary"
            />
    </LinearLayout>

</LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:text="Booking Type"

                        />
                    <TextView
                        android:id="@+id/txt_book_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:textSize="17dp"
                        android:singleLine="true"
                        android:gravity="right"
                        android:hint="Book later"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_weight="1.4"
                        android:singleLine="true"
                        android:textSize="16dp"
                        android:text="Date"
                        />
                    <TextView
                        android:id="@+id/txt_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:textSize="15dp"
                        android:layout_weight="1"
                        android:padding="7dp"
                        android:gravity="right"
                        android:singleLine="true"
                        android:hint="Book date"
                        android:textColor="@color/overlay_dark_70"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_weight="1.4"
                        android:singleLine="true"
                        android:textSize="16dp"
                        android:text="Vehicle number"

                         />
                    <TextView
                        android:id="@+id/txt_vehicle_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:textSize="15dp"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:gravity="right"
                        android:hint="Vehicle No"
                        android:textColor="@color/overlay_dark_70"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_weight="1.4"
                        android:singleLine="true"
                        android:textSize="18dp"
                        android:text="Vehicle type"

                       />
                    <TextView
                        android:id="@+id/txt_vehicle_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:textSize="15dp"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:gravity="right"
                        android:hint="Vehicle type"
                        android:textColor="@color/overlay_dark_70"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_weight="1.4"
                        android:singleLine="true"
                        android:textSize="16dp"
                        android:text="From:"

                         />
                    <TextView
                        android:id="@+id/txt_from_add"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:textSize="15dp"
                        android:maxLines="2"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:hint="From Address"
                        android:textColor="@color/overlay_dark_70"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_weight="1.4"
                        android:textSize="16dp"
                        android:text="To:"

                        />
                    <TextView
                        android:id="@+id/txt_to_add"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:textSize="15dp"
                        android:layout_weight="1"
                        android:maxLines="2"
                        android:gravity="right"
                        android:hint="To Address"
                        android:textColor="@color/overlay_dark_70"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="11dp"
                    android:layout_margin="11dp"
                    android:id="@+id/layout_btn_order"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txt_book_done"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:background="@drawable/edittext"
                        android:gravity="center"
                        android:padding="7dp"
                        android:singleLine="true"
                        android:textSize="20dp"
                        android:text="Confirm booking"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    </android.support.v7.widget.CardView>
