<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:padding="4dp"
    android:background="@color/grey_200"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
<android.support.design.card.MaterialCardView
    android:layout_width="match_parent"
    app:cardCornerRadius="5dp"
    app:cardElevation="11dp"
    app:cardPreventCornerOverlap="true"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="22dp"
        android:background="@drawable/login_et_rectangle1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/vehicle_type_img"
            android:layout_width="match_parent"
            android:layout_height="111dp"
            android:scaleType="fitXY"
            android:src="@drawable/banner_image_for_screen6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="7dp">

            <TextView
                android:id="@+id/txt_veh_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tempo"
                android:textColor="@color/overlay_dark_70"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/txt_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:text="Status "
                android:textColor="@color/overlay_dark_60"
                android:textSize="14dp" />

        </LinearLayout>
    </LinearLayout>
</android.support.design.card.MaterialCardView>


</LinearLayout>