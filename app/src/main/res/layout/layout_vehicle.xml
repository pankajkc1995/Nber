<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardCornerRadius="5dp"
    android:background="@drawable/common_google_signin_btn_text_light_normal_background"
    android:gravity="center"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/layout"
        android:layout_margin="14dp"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/vehicle_type_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:civ_border_width="2dp"
            android:layout_marginLeft="11dp"
            app:civ_border_overlay="true"
            app:civ_border_color="@color/colorPrimaryDark"
            android:src="@drawable/profile_pics" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:orientation="vertical"
            android:padding="11dp">

            <TextView
                android:id="@+id/txt_veh_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tempo"
                android:textStyle="bold"
                android:textColor="@color/overlay_dark_70"
                android:textSize="20dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="right|center"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rating "
                    android:textSize="16dp"
                    android:textColor="@color/overlay_dark_80" />
                <RatingBar
                    android:id="@+id/rating"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    style="?android:attr/ratingBarStyleSmall"
                    android:numStars="5"
                    android:padding="5dp"
                    android:background="@drawable/edittext"
                    android:stepSize="0.1"
                    android:layout_gravity="center"
                    android:isIndicator="true" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/rupee_sign"
                    android:layout_weight="1"
                    android:id="@+id/price"
                    android:gravity="right"
                    android:textSize="18dp"
                    android:textColor="@color/overlay_dark_60" />
                <TextView
                    android:id="@+id/txt_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price: "
                    android:textSize="18dp"
                    android:textColor="@color/overlay_dark_60" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</android.support.design.card.MaterialCardView>