<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="aaronsoftech.in.nber.Activity.Acc_setting">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/background_splash"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="22dp"
            android:src="@drawable/back_arrow" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="22dp"
            android:gravity="center"
            android:text="Account settings"
            android:textColor="@android:color/white"
            android:textSize="22dp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="22dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="80dp"
                    android:id="@+id/profile"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_user" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="22dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="Name"
                        android:id="@+id/txt_name"
                        android:textColor="@android:color/black"
                        android:textSize="17dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/txt_mobile"
                        android:hint="Mobile number"
                        android:textColor="@android:color/black"
                        android:textSize="17dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="Email"
                        android:id="@+id/txt_emailid"
                        android:textColor="@android:color/black"
                        android:textSize="17dp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/light_gray"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="22dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="22dp"
                        android:src="@drawable/ic_home"
                        android:layout_height="22dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Add Work"
                        android:id="@+id/txt_add_work"
                        android:layout_marginLeft="22dp"
                        android:gravity="center_vertical"
                        android:textColor="@android:color/black"
                        android:textSize="18dp" />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/txt_add_work2"
                    android:layout_marginLeft="44dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/grey_60"
                    android:textSize="17dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="17dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="22dp"
                        android:src="@drawable/ic_briefcase"
                        android:layout_height="22dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/txt_add_home"
                        android:text="Add Home"
                        android:layout_marginLeft="22dp"
                        android:gravity="center_vertical"
                        android:textColor="@android:color/black"
                        android:textSize="18dp" />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_add_home2"
                    android:layout_marginLeft="44dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/grey_60"
                    android:textSize="17dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="17dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="22dp"
                        android:src="@drawable/ic_star"
                        android:layout_height="22dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Saved Places"
                        android:id="@+id/txt_add_place"
                        android:layout_marginLeft="22dp"
                        android:gravity="center_vertical"
                        android:textColor="@android:color/black"
                        android:textSize="17dp" />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_add_place2"
                    android:layout_marginLeft="44dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/grey_60"
                    android:textSize="17dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="11dp"
                android:background="@color/light_gray"></View>
            <TextView
                android:layout_width="match_parent"
                android:textSize="16dp"
                android:id="@+id/txt_privacy"
                android:layout_marginLeft="11dp"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"
                android:text="Privacy Policy" />

            <TextView
                android:layout_width="match_parent"
                android:textSize="16dp"
                android:layout_margin="11dp"
                android:id="@+id/txt_tc"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"
                android:text="Terms and conditions" />

            <TextView
                android:id="@+id/btn_signout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="22dp"
                android:layout_weight="1"
                android:background="@drawable/browse_button"
                android:gravity="center"
                android:text="Sign out"
                android:layout_gravity="center"
                android:padding="11dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="22dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
