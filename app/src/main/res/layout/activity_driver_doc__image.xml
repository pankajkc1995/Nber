<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="aaronsoftech.in.nber.Activity.Driver_doc_Image">

    <ImageView
        android:layout_width="wrap_content"
        android:padding="11dp"
        android:src="@drawable/ic_arrow_back"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:textSize="25dp"
        android:id="@+id/txt_title"
        android:layout_margin="11dp"
        android:layout_marginTop="22dp"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_margin="11dp"
        android:id="@+id/txt_message"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/image"
        android:src="@drawable/ic_driving_license"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/txt_value"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="22dp"
        android:paddingLeft="11dp"
        android:visibility="gone"
        android:background="@drawable/border_black_line"
        android:singleLine="true"
        android:textColor="@android:color/black" />
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_height="44dp">
    <TextView
        android:id="@+id/camera_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="11dp"
        android:gravity="center"
        android:drawableRight="@drawable/ic_menu_camera"
        android:text="TAP TO ADD"
        android:textColor="@color/light_blue_500"
        android:textSize="25dp" />


</LinearLayout>

</LinearLayout>
