<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_height="match_parent"
    tools:context="aaronsoftech.in.nber.Activity.login_mobile">

   <LinearLayout
       android:layout_width="match_parent"
       android:orientation="vertical"
      android:paddingTop="66dp"
       android:layout_height="wrap_content">
       <ImageView
           android:layout_width="match_parent"
           android:src="@drawable/yellow_logo"
           android:layout_weight="1"

           android:scaleType="centerInside"
           android:layout_height="match_parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="66dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:textColor="@android:color/black"
            android:layout_margin="22dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Enter your mobile number to start ride"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="22dp"
            android:background="@drawable/border_black_line"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:src="@drawable/ic_india" />

                <TextView
                    android:id="@+id/user_status"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="12dp"
                    android:gravity="right|center"
                    android:text="+91"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/t_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:hint="Enter Mobile no."
                    android:inputType="number|none"
                    android:maxLength="10"
                    android:textColor="@android:color/black"
                    android:textSize="18dp" />

            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/connect_social_msg"
            android:layout_marginLeft="11dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="22dp"
            android:gravity="right|center"
            android:id="@+id/social_login"
            android:layout_margin="22dp"
            android:visibility="gone"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="20dp" />
    </LinearLayout>

   </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:padding="22dp"
        android:id="@+id/next_button"
        android:src="@drawable/ic_right_arrow" />
</RelativeLayout>
